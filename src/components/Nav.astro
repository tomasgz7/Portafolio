---
const items = [
  { id: "experience", label: "01. Experiencia" },
  { id: "projects", label: "02. Proyectos Destacados" },
  { id: "education", label: "03. Formación y Certificaciones" },
  { id: "about", label: "04. Perfil Profesional" },
  { id: "technologies", label: "05. Stack Tecnológico" },
  { id: "contact", label: "06. Contacto" },
];
---

<nav
  class="fixed left-0 top-0 hidden lg:flex flex-col h-screen w-[25rem] z-50 px-12 py-10"
>
  {/* Desktop Sidebar */}
  <div class="flex-1 flex flex-col justify-center">
    <ul class="flex flex-col gap-8 -mt-20">
      <li class="flex items-center gap-4 mb-10">
        <span class="block w-10 h-px bg-secondary"></span>
        <a
          href="#hero"
          class="uppercase tracking-wide text-foreground/80 hover:text-accent font-semibold text-base transition-all"
        >
          Inicio
        </a>
      </li>

      {
        items.map((item) => (
          <li key={item.id} class="flex items-center gap-4">
            <span class="block w-10 h-px bg-secondary" />
            <a
              href={`#${item.id}`}
              class="uppercase tracking-wide text-foreground/80 hover:text-accent font-semibold text-base transition-all"
            >
              {item.label.slice(3)}
            </a>
          </li>
        ))
      }
    </ul>
  </div>

  {/* Social Links */}
  <div class="flex gap-10 mt-auto">
    <a
      href="https://github.com/tomasgz7"
      target="_blank"
      rel="noreferrer"
      aria-label="GitHub"
    >
      <img
        src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/github.svg"
        class="w-7 h-7 grayscale opacity-90 hover:opacity-100 drop-shadow-[0_0_6px_var(--accent)] transition-all"
        alt="GitHub"
      />
    </a>

    <a
      href="https://linkedin.com/in/tomasguzman7"
      target="_blank"
      rel="noreferrer"
      aria-label="LinkedIn"
    >
      <img
        src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/linkedin.svg"
        class="w-7 h-7 grayscale opacity-90 hover:opacity-100 drop-shadow-[0_0_6px_var(--accent)] transition-all"
        alt="LinkedIn"
      />
    </a>

    <a
      href="https://mail.google.com/mail/?view=cm&fs=1&to=tomasgz.dev@gmail.com"
      target="_blank"
      rel="noreferrer"
      aria-label="Email"
    >
      <img
        src="https://cdn.jsdelivr.net/npm/simple-icons@v10/icons/maildotru.svg"
        class="w-7 h-7 grayscale opacity-90 hover:opacity-100 drop-shadow-[0_0_6px_var(--accent)] transition-all"
        alt="Email"
      />
    </a>
  </div>
</nav>

{/* Mobile Navigation */}
<div class="lg:hidden fixed top-6 right-6 z-50">
  <details class="group">
    <summary
      class="list-none w-12 h-12 rounded-full bg-[#0b1424] border border-white/10 grid place-items-center cursor-pointer select-none shadow-lg hover:border-accent/50 transition-all"
    >
      <span class="sr-only">Open menu</span>
      <svg
        width="26"
        height="26"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
      >
        <path d="M3 6h18M3 12h18M3 18h18"></path>
      </svg>
    </summary>

    <div
      class="mt-3 p-4 rounded-2xl backdrop-blur bg-[#091221]/95 border border-white/10 shadow-xl animate-fadeUp"
    >
      <ul class="space-y-2">
        {
          items.map((item) => (
            <li key={item.id}>
              <a
                href={`#${item.id}`}
                class="block py-2 px-4 rounded text-foreground/90 hover:text-accent font-mono text-base transition-all"
              >
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </details>
</div>
